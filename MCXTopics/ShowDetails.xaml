<Window x:Class="MCXTopics.ShowDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCXTopics"
        mc:Ignorable="d"
        Title="ShowDetails" Height="380" Width="450"  WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="/purple.jpg" />
    </Window.Background>
    <Grid>

        <!--ROWS-->
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="260" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <!-- COLUMNS -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="125" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock HorizontalAlignment="Center" Margin="0,24,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Company Name :" VerticalAlignment="Top" Width="126" Height="32" FontSize="15" FontWeight="Bold" Foreground="White" />
        <TextBlock HorizontalAlignment="Left" Margin="66,72,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Sec #   :" VerticalAlignment="Top" Width="58" Height="21" FontSize="15" FontWeight="Bold" Foreground="White" />
        <Rectangle Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="3,28,0,0" Grid.Row="1" Stroke="White" VerticalAlignment="Top" Width="290" />
        <Rectangle Grid.Column="1" HorizontalAlignment="Center" Height="160" Margin="0,72,0,0" Grid.Row="1" Stroke="White" VerticalAlignment="Top" Width="293" />

        <TextBlock x:Name="Topic" Grid.Column="1" HorizontalAlignment="Center" Margin="0,28,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="273" Foreground="White" Height="24" />
        <TextBlock x:Name="Description" Grid.Column="1" HorizontalAlignment="Center" Margin="0,75,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="273" Foreground="White" Height="157" />

        <Border Grid.Column="1" Grid.Row="2" BorderThickness="1" CornerRadius="20" BorderBrush="White" Margin="0,10,152,149">

            <Button Name ="Others" Grid.Column="1" Content="OTHERS"  Margin="9,0,7,0" Grid.Row="4" VerticalAlignment="Center" Height="42" FontWeight="Bold"  FontSize="15" BorderBrush="{x:Null}" Background="#00000000" Foreground="White" />
        </Border>

        <Border Grid.Column="1" Grid.Row="2" BorderThickness="1" CornerRadius="20" BorderBrush="White" Margin="146,10,0,149" Background="#FFF95757">
            <Button x:Name ="Exit"  Content="CLOSE" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="74" Height="40" FontSize="15" FontWeight="Bold"  BorderBrush="#00000000" Cursor="Hand" Foreground="#FFFBFBFB" Background="#00000000" Click="Exit_Click" />
        </Border>
    </Grid>
</Window>